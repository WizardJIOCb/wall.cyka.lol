    # Deny access to configuration and sensitive files
    location ~ /\.(env|git|svn|htaccess|htpasswd)$ {
        deny all;
    }
    
    # Deny access to composer files
    location ~ composer\.(json|lock)$ {
        deny all;
    }
    
    # Deny access to package files
    location ~ package(-lock)?\.json$ {
        deny all;
    }

    # ============================================================================
    # Monitoring and Health Checks
    # ============================================================================
    
    # Nginx status endpoint (restricted to localhost)
    location /nginx_status {
        stub_status on;
        access_log off;
        allow 127.0.0.1;
        allow ::1;
        deny all;
    }

    # ============================================================================
    # Error Pages
    # ============================================================================
    
    # Client errors (404) - serve Vue SPA for client-side routing
    error_page 404 /index.html;
    
    # Server errors - custom error page
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }

    # ============================================================================
    # Logging
    # ============================================================================
    
    access_log /var/log/nginx/wall_access.log combined;
    error_log /var/log/nginx/wall_error.log warn;
}
